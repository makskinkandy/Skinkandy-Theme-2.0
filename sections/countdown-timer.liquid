{% if template.suffix == "store-details"  %}
  {% if page.metafields.custom.enable_2for1_banner %}
    {% render 'countdown-timer' %}
  {% endif %}
{% else %}
  {% render 'countdown-timer' %}
{% endif %}
{% schema %}
{
    "name": "Countdown timer",
    "settings": [        
        {
            "type": "header",
            "content": "Countdown timer settings"
        },
        {
            "type": "text",
            "id": "date",
            "label": "Date",
            "info": "Set date to count down from current date and time. Date should be in the future, not in the past. Use format YYYY-MM-DD HH:MM 24-hour system (Eg. 2022-04-20 16:20)"
        },
        {
            "type": "select",
            "id": "action",
            "label": "Action once countdown is reached",
            "info": "Select one of the actions below",
            "default": "null",
            "options": [
                {
                    "value": "null",
                    "label": "Do nothing"
                },
                {
                    "value": "hide",
                    "label": "Hide entire section"
                }
            ]
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "checkbox",
            "id": "days",
            "label": "Display days",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "hrs",
            "label": "Display hours",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "mins",
            "label": "Display minutes",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "secs",
            "label": "Display seconds",
            "default": false
        },
        {
          "type": "url",
          "id": "book_link",
          "label": "Book Now Link"
        },
        {
            "type": "header",
            "content": "Design"
        },
        {
            "type": "checkbox",
            "id": "sticky",
            "label": "Set section to be sticky",
            "default": false
        },
        {
            "type": "text",
            "id": "class",
            "label": "Optional section class"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background color",
            "default": "#ffffff"
        },
        {
            "type": "color",
            "id": "heading_color",
            "label": "Heading text color",
            "default": "#000000"
        },
        {
            "type": "color",
            "id": "countdown_color",
            "label": "Countdown timer color",
            "default": "#000000"
        }
    ],
    "presets": [{
        "name":"Countdown timer"
    }]
}
{% endschema %}