{% if customer and section.settings.type == 'login' %}
  <script>
      if (window.location.search.indexOf('preview_theme_id') === -1) {
        window.location.href = "{{ section.settings.redirect-url | url_encode }}";
      }
    </script>
{% endif %}

{% if customer == nil and section.settings.type == 'not-login' %}
  <script>
    if (window.location.search.indexOf('preview_theme_id') === -1) {
      window.location.href = "/account/login?return_url={{ section.settings.redirect-url | url_encode }}";
    }
  </script>
{% endif %}

{% schema %}
{
  "name": "Login Redirect",
  "tag": "section",
  "class": "login-redirect",
  "settings": [
    {
      "type": "select",
      "id": "type",
      "label": "Title",
      "default": "login",
      "options": [
        {
          "value": "login",
          "label": "Login"
        },
        {
          "value": "not-login",
          "label": "Not Login"
        }
      ]
    },
    {
      "type": "url",
      "id": "redirect-url",
      "label": "Redirect URL"
    }
  ],
  "presets": [
    {
      "name": "Login Redirect",
      "category": "Custom"
    }
  ]
}
{% endschema %}