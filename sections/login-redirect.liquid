{% if customer %}
  {% if section.settings.type == 'login' %}
    <script>
      if (window.location.search.indexOf('preview_theme_id') === -1) {
        window.location.href = "/{{ section.settings.redirect-url }}";
      }
    </script>
  {% endif %}
{% else %}
  {% if section.settings.type == 'not-login' %}
    <script>
      if (window.location.search.indexOf('preview_theme_id') === -1) {
        window.location.href = "/{{ section.settings.redirect-url }}";
      }
    </script>
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Login Redirect",
  "tag": "section",
  "class": "login-redirect",
  "settings": [
    {
      "type": "select",
      "id": "type",
      "label": "Title",
      "default": "login",
      "options": [
        {
          "value": "login",
          "label": "Login"
        },
        {
          "value": "not-login",
          "label": "Not Login"
        }
      ]
    },
    {
      "type": "url",
      "id": "redirect-url",
      "label": "Redirect URL"
    }
  ],
  "presets": [
    {
      "name": "Login Redirect",
      "category": "Custom"
    }
  ]
}
{% endschema %}