{% assign website_path = request.locale.root_url | remove_first: '/' %}
<div class="page-width customer-form">
  <div class="customer-form__wrapper">
    <h2>{{ section.settings.title }}</h2>
    <div class="form-column__embed section-form">
        <div class="embed-form">
          <form action="https://webto.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8&amp;orgId=00D6g000005ioEV" method="POST" class="custom-form kandy-club-form">
            <input type="hidden" name="oid" value="00D6g000005ioEV">
            <input type="hidden" name="retURL" value="https://skinkandy.com/pages/welcome-to-the-kandyclub-skinkandy-loyalty-program" class="success-url">
          
            <div class="form-field" style="--width: 50;">
              <label for="first_name">First Name <span class="required">*</span></label>
              <input id="first_name" maxlength="40" name="first_name" size="20" type="text" required="" class="first_name">
            </div>
            <div class="form-field" style="--width: 50;">
              <label for="last_name">Last Name <span class="required">*</span></label>
              <input id="last_name" maxlength="80" name="last_name" size="20" type="text" required="" class="last_name">
            </div>
          
            <div class="form-field" style="--width: 50;">
              <label for="email">Email <span class="required">*</span></label>
              <input id="email" maxlength="80" name="email" size="20" type="text" required="">
            </div>
            <div class="form-field" style="--width: 50;">
              <label for="mobile">Mobile <span class="required">*</span></label>
              <input id="mobile" maxlength="40" name="mobile" size="20" type="text" required="">
            </div>
          
            <div class="form-field" style="--width: 50;">
              <label for="00N6g00000U6sWx">Date of Birth (DD/MM/YYYY): <span class="required">*</span></label>
              <span class="dateInput dateOnlyInput"><input id="00N6g00000U6sWx" name="00N6g00000U6sWx" size="12" type="text" required=""></span>
              <p class="error-message">Please enter a valid Date of Birth</p>
            </div>
            <div class="form-field" style="--width: 50;">
              <label for="zip">Postcode <span class="required">*</span></label>
              <input id="zip" maxlength="20" name="zip" size="20" type="text" required="">
            </div>
          
            <label for="lead_source" class="visually-hidden" style="visibility:hidden">Lead Source</label>
            <select style="visibility:hidden" id="lead_source" name="lead_source" class="visually-hidden">
              <option value="">--None--</option>
              <option value="SkinKandy Club Form" selected="">SkinKandy Club Form</option>
              <option value="Advertisement">Advertisement</option>
              <option value="Customer Event">Customer Event</option>
              <option value="Employee Referral">Employee Referral</option>
              <option value="Google AdWords">Google AdWords</option>
              <option value="Other">Other</option>
              <option value="Partner">Partner</option>
              <option value="Purchased List">Purchased List</option>
              <option value="Trade Show">Trade Show</option>
              <option value="Webinar">Webinar</option>
              <option value="Website">Website</option>
              <option value="Appointment">Appointment</option>
            </select>
          
            <div class="form-field" style="--width: 40">
              <label for="00NPZ000002R1A9">Country<span class="required">*</span></label>
              <select id="00NPZ000002R1A9" name="00NPZ000002R1A9">
                <option value="Australia" selected="">Australia</option>
                <option value="New Zealand">New Zealand</option>
              </select>
            </div>
          
            <div class="form-field" style="--width: 100">
              <div class="terms-container hidden">
                  <label for="emailOptOut" style="visibility:hidden"> Optout: </label>
                  <input id="emailOptOut" type="checkbox" name="emailOptOut">
              </div>
              <div class="terms-container hidden">
            <label for="00N4V00000DPNyD" style="visibility:hidden"> Enable Loyalty: </label>
            <input id="00N4V00000DPNyD" name="00N4V00000DPNyD" type="checkbox" value="1" checked="">
              </div>
              <div class="first-row">
                  <input id="emailOptOutFake" type="checkbox" name="emailOptOutFake" required="" checked="">
                  <label>I agree to receive marketing messages from SkinKandy<span class="required">*</span></label>
              </div>
            </div>
          
            <div class="form-field" style="--width: 50;">
              <p class="terms-message">By ticking "Yes", I confirm that I have read and accepted the <a href="/pages/kandy-club-loyalty-terms" target="_blank">Kandy Club Terms &amp; Conditions</a> and confirm that I agree to receive marketing communications such as promotions, offers and updates.</p>
            </div>
            <div class="form-field" style="--width: 50; display: flex">
              <input type="submit" name="submit" class="btn btn--full btn--submit" disabled="">
            </div>
          </form>
        </div>
      </div>
  </div>
</div>

{% schema %}
{
  "name": "Customer Form",
  "tag": "section",
  "class": "customer-lead-capture",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "Customer Form",
      "category": "Custom"
    }
  ]
}
{% endschema %}