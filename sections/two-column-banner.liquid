{% if template.suffix == "store-details"  %}
  {% if page.metafields.custom.enable_2for1_banner == true %}
    {{ page.metafields.custom.enable_2for1_banner }}
    {% render 'two-column-banner' %}
  {% endif %}
{% else %}
  {% render 'two-column-banner' %}
{% endif %}

{% schema %}
  {
    "name": "Two Column Banner",
    "settings": [
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image"
      },
      {
        "type": "image_picker",
        "id": "bg_image_mobile",
        "label": "Background Image Mobile"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Banner Subheading"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Header Image"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Book Now Link"
      }
    ],
    "presets": [{
        "name":"Two Column Banner"
    }]
  }
{% endschema %}