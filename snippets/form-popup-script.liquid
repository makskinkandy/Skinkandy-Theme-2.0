        setTimeout(() => {
            POPUP.classList.remove("hidden");
            document.body.classList.add('no-scroll');
        }, totalDelay);
      }
    {% endif %}

    document.querySelector(".popup-close").addEventListener("click", (e) => {
        e.preventDefault();
        POPUP.classList.add("hidden");
        setCookie('popupClosed', 'true', { 'max-age': 3600 * 24 * 30 });
        document.body.classList.remove('no-scroll');
      
      {% if page.metafields.custom.giveaway %}
        setCookie('giveawayClosed', 'true', { 'max-age': 3600 * 24 * 30 });
      {% endif %}

      {% if page.metafields.custom.form_cookie %}
        setCookie('{{ page.metafields.custom.form_cookie }}', 'true', { 'max-age': 3600 * 24 * 30 });
      {% endif %}
      
    });

  let today = new Date();
  today.setDate(today.getDate() - 1);
  let day = String(today.getDate()).padStart(2, '0');
  let month = String(today.getMonth() + 1).padStart(2, '0');
